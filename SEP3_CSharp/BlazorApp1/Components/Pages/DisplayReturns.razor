@using Entities


@foreach (var order in Orders)
{
    foreach (var item in order.Items)
    {
        <div class="col-md-3 mb-2">
            <a href="@($"/ProductDetails/{item.ItemId}")">
                <div class="card">
                    <img class="img-thumbnail" src="@item.ImageURL">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            @item.Name
                        </h5>
                        <p class="card-text">
                            <b>@item.Price.ToString("C", new System.Globalization.CultureInfo("en-DK"))</b>
                        </p>
                        <p class="card-text">
                            <label>@order.PlacedOn</label>
                            <label>     Quantity:  @item.Quantity</label>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    }
}

@code
{
    [Parameter] public IEnumerable<Order> Orders { get; set; }
}