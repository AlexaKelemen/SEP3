@using DataTransferObjects;
@using Microsoft.AspNetCore.Components;

@foreach (var item in Products)
{
    <div class="col-md-3 mb-2">
        <a href="@($"/ProductDetails/{item.ItemId}")">
            <div class="card">
                <img class="img-thumbnail" src="@item.ImageUrl">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @item.Name
                    </h5>
                    <p class="card-text">
                        <b>@item.Price.ToString("C", new System.Globalization.CultureInfo("en-DK"))</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}

@code
{
    [Parameter] public IEnumerable<ItemDTOs> Products { get; set; }
}