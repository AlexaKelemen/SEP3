@page "/Product"
@using ItemDTO = Proto.ItemDTO
@using Proto
@inherits ProductBase


@if (Products == null)
{
    <h3>No products can be displayed right now, sorry for the inconvenience</h3>
}
else
{
    <h3 class="mb-5">Products</h3>
    var productCount = Products.Count();
    @if (productCount > 0)
    {
        const int itemsPerRow = 4;
        var productsRowList = new List<ItemDTOs>();

        @for (int i = 0; i < productCount; i++)
        {
            productsRowList = Products.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();
            <div class="row mt-3">
                @foreach (var item in productsRowList)
                {
                    <div class="col-md-3 mb-2">
                        <a href="a">
                            <div class="card">
                                <img class="img-thumbnail" src="item.ImageURL">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">
                                        @item.name
                                    </h5>
                                    <p class="card-text">
                                        <b>@item.price.ToString("C")</b>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    }
}


